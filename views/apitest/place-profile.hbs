<!-- views/apitest/place-profile.hbs -->

<main class="place-profile-main">
  <section class="place-profile-title">

    <h1>{{data.name}}</h1>

  </section>
  <section class="place-profile-card">

      <article class="place-profile-card-img">
        <img src="https://yt3.ggpht.com/a-/AAuE7mB5EQSMiXUOHnc4PZppYQQ0quToZJE7mKIocQ=s900-mo-c-c0xffffffff-rj-k-no" alt="{{data.name}}">
      </article>

      <article class="place-profile-text">
        <h2>{{data.name}}</h2>
        <h3>{{data.location.city}}</h3>
        <p>{{data.tips}}</p>
      </article>

  </section>
  <section class="place-profile-buttons">
    
    <button type="submit" class="button blue">Add</button>
    <button id="match-places" class="button">Match</button>
 
  </section>
    <div class="matched_places">
      <form action="/apitest/search" method="GET" id="form-container">
        <label for="location">Location</label>
        <input id="location" type="text" name="location" placeholder="Where is it?">
        <br><br>
        <label for="placeName">Place name</label>
        <input id="placeName" type="text" name="placeName" placeholder="What its name?">

        {{#if message}}
          <div class="error-message">{{ message }}</div>
        {{/if}}
        <br><br>

        <button type="submit" value="singup" class="button">Search Place</button>
    </form>
    </div>


  <section class="place-profile-similar">
    <h3>Similar Cozyplaces</h3>
    {{#if similar.similar}}
        {{#each similar.similar}}
          <p>{{this.name}}</p>
        {{/each}}
    {{/if}} 
    <p>There are not similar places</p>

  </section>



      <script>
let matched = document.querySelector('.matched_places');
 matched.style.display = 'none';

 let buttonMatched = document.querySelector('#match-places');
 

buttonMatched.addEventListener('click', () =>{
   matched.style.display = 'block';
 } )

  </script>

</main>